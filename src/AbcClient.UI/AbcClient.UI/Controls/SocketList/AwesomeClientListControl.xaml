<UserControl x:Class="AbcClient.UI.AwesomeClientListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbcClient.UI"
             mc:Ignorable="d" >
    <ScrollViewer d:DataContext="{x:Static local:AwesomeClientListDesignModel.Instance}"
                  VerticalScrollBarVisibility="Auto"
                  >
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:AwesomeClientListItemControl />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
