<Application x:Class="AbcClient.AwesomeUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AbcClient.AwesomeUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Texts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
