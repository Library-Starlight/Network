<UserControl x:Class="AbcClient.UI.Infrastructure.FontAwesomeIconText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbcClient.UI.Infrastructure"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AbcClient.UI.Infrastructure;component/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <!-- 图标 -->
        <TextBlock x:Name="IconText"
                   FontFamily="{StaticResource FontAwesome}" 
                   />

        <!-- 中间留空3个字符长度 -->
        <TextBlock Text="   " />

        <!-- 文本 -->
        <TextBlock x:Name="ContentText"
                   FontFamily="{StaticResource FontAwesome}" 
                   Text="See all testimonials" />

    </StackPanel>
</UserControl>
